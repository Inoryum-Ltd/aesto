{{!< ../default}}

<div class="it-page">
    <div class="it-container">
        {{#if @member.paid}}
            {{!-- Logged in, paying member: Redirect home --}}
            <script>window.location = '{{@site.url}}';</script>
        {{else if @member}}
            {{!-- Logged in, not paying: Check out --}}
            <div class="it-checkout-form it-canvas">
                <h1 class="it-checkout-title">{{t "Choose your subscription"}}</h1>
                <p>{{t "Unlock full access to {sitetitle} to get premium contents & updates" sitetitle=@sit.title}}</p>
                <div class="it-checkout-box it-grid-c2">
                    <div class="it-checkout-plan">
                        <header class="it-checkout-plan-header">
                            <h3>{{t "Monthly"}}</h3>
                            <span>{{@price.currency_symbol}}</span><strong>{{@price.monthly}}</strong> / {{t "month"}}
                        </header>
                        <ul class="it-checkout-plan-content">
                            <li>{{t "Full access to all private posts"}}</li>
                            <li>{{t "Regular updates with new content"}}</li>
                            <li>{{t "Support independent publishing"}}</li>
                            <li>{{t "Simple, secure card payment"}}</li>
                        </ul>
                        <a class="it-button it-button-primary fit" href="javascript:void(0)" data-members-plan="Monthly">{{t "Choose this plan"}}</a>
                        </div>
                    <div class="it-checkout-plan">
                        <header class="it-checkout-plan-header">
                            <h3>{{t "Yearly"}}</h3>
                            <span>{{@price.currency_symbol}}</span><strong>{{@price.yearly}}</strong> / {{t "year"}}
                        </header>
                        <ul class="it-checkout-plan-content">
                            <li>{{t "Full access to all private posts"}}</li>
                            <li>{{t "Regular updates with new content"}}</li>
                            <li>{{t "Support independent publishing"}}</li>
                            <li>{{t "Simple, secure card payment"}}</li>
                            <li>{{t "One easy payment instead of 12!"}}</li>
                        </ul>
                        <a class="it-button it-button-primary fit" href="javascript:void(0)" data-members-plan="Yearly">{{t "Choose this plan"}}</a>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            {{!-- Not logged in: Sign up --}}
            <form class="it-auth-form" data-members-form="signup">
                <h1 class="it-auth-title">{{t "Signup to {sitetitle}" sitetitle=@site.title}}</h1>
                <p>{{@site.description}}</p>
                <div class="it-auth-box">
                    <input class="it-input" data-members-email type="email" placeholder="{{t "Type your email..."}}" required="true" autocomplete="false" aria-label="{{t "Email"}}" />
                    <button class="it-button it-button-primary" type="submit">
                        <span class="it-button-content">{{t "Continue"}}</span>
                        <span class="it-button-loader">{{> "icons/loader"}}</span>
                    </button>
                </div>
                <p><small>{{t "Already have an account?"}} <a href="/signin/">{{t "Sign in"}}</a></small></p>
                <div class="message-success">{{t "Great! Check your inbox and click the link to confirm your subscription"}}</div>
                <div class="message-error">{{t "Please enter a valid email address!"}}</div>
            </form>
        {{/if}}
    </div>
</div>