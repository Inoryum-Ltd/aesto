{{!< ../default}}

<div class="it-page">
    <div class="it-container">
        {{#if @member}}
            {{!-- Logged in: Redirect home --}}
            <script>window.location = '{{@site.url}}';</script>
        {{else}}
            {{!-- Not logged in: Signin form --}}
            <form class="it-auth-form" data-members-form="signin">
                <h1 class="it-auth-title">{{t "Welcome back!"}}</h1>
                <p>{{t "Sign into your account again for full access"}}</p>
                <div class="it-auth-box">
                    <input class="it-input" data-members-email type="email" placeholder="{{t "Your email address"}}" required="true" autocomplete="false" aria-label="{{t "Email"}}" />
                    <button class="it-button it-button-primary" type="submit">
                        <span class="it-button-content">{{t "Sign in"}}</span>
                        <span class="it-button-loader">{{> "icons/loader"}}</span>
                    </button>
                </div>
                <p><small>{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a></small></p>
                <div class="message-success">{{t "Great! Check your inbox and click the link to complete signin"}}</div>
                <div class="message-error">{{t "Please enter a valid email address!"}}</div>
            </form>
        {{/if}}
    </div>
</div>