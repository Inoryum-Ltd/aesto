{{!< default}}

<div class="it-page">
    <div class="it-container">

        {{#author}}
            <header class="it-header it-canvas">
                {{#if cover_image}}
    	            <figure class="it-feature-image-wrapper">
    	                <img class="it-feature-image" 
    	                    srcset="{{img_url cover_image size="s"}} 300w,
    	                            {{img_url cover_image size="m"}} 600w,
    	                            {{img_url cover_image size="l"}} 1000w,
    	                            {{img_url cover_image size="xl"}} 2000w"
    	                    sizes="(max-width: 1000px) 490px, 2000px"
    	                    src="{{img_url cover_image size="m"}}"
    	                    alt="{{title}}"
    	                />
    	            </figure>
    	        {{/if}}
    	        <div class="it-author-image">
    	            {{#if profile_image}}
                        <img src="{{profile_image}}" alt="{{name}}" />
                    {{else}}
                        {{> "icons/user"}} {{!-- partials/icons/user.hbs --}}
                    {{/if}}
    	        </div>
                <h1 class="it-title">{{name}}</h1>
                {{#if bio}}
                    <p class="it-excerpt">{{bio}}</p>
                {{/if}}
    
                <div class="it-author-meta">
                    <div class="it-author-links">
                        {{#if location}}
                            <a href="#" target="_blank" rel="noopener">{{> "icons/pin"}} {{location}}</a>
                        {{/if}}
                        {{#if website}}
                            <a href="{{website}}" target="_blank" rel="noopener">{{> "icons/link"}}</a>
                        {{/if}}
                        {{#if twitter}}
                            <a href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                        {{/if}}
                        {{#if facebook}}
                            <a href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                        {{/if}}
                    </div>
                </div>
            </header>
        {{/author}}

        <div class="it-postfeed it-grid-c3">
            {{> "loop"}} {{!-- partials/loop.hbs --}}
        </div>
        
        {{pagination}} {{!-- partials/pagination.hbs --}}

    </div>
</div>