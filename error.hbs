
{{!< default}}

<section class="it-page it-error">
    <div class="it-container">
        <section class="it-error-content">
            <h1 class="it-error-code">{{statusCode}}</h1>
            <p class="it-error-description">{{message}}</p>
            <p class="it-error-link"><a href="{{@site.url}}">{{t "Go to the front page â†’"}}</a></p>
            {{#if errorDetails}}
            <section class="it-error-stack">
                <h4>{{t "Theme errors:"}}</h4>
                <ul class="it-error-stack-list">
                    {{#foreach errorDetails}}
                    <li>
                        <h5 class="it-error-stack-function">{{{rule}}}</h5>
                        {{#foreach failures}}
                        <span class="it-error-stack-file"><strong>{{t "Ref:"}}</strong> {{ref}}</span><br>
                        <span class="it-error-stack-file"><strong>{{t "Message:"}}</strong> {{message}}</span>
                        {{/foreach}}
                    </li>
                    {{/foreach}}
                </ul>
            </section>
            {{/if}}
        </section>
    </div>
</section>