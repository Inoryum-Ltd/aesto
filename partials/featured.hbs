		{{#get "posts" limit="4" filter="featured:true" include="tags,authors"}}
			<div class="it-hero featured it-grid-c3">
					{{#foreach posts visibility="all"}}
				<article class="it-hero-inner">
					{{#if feature_image}}
						<figure class="it-feature-card-image">
							<img class="lazy"
										data-srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    data-sizes="(max-width: 1000px) 400px, 700px"
                    data-src="{{img_url feature_image size="m"}}"
                    alt=""
                />
						</figure>
					{{/if}}
					<div class="it-hero-contents">
							<div class="it-featured-post-tags">
								{{#foreach tags}}
										<a href="{{url}}" title="{{title}}"><span class="it-tag-hash">&#35;</span>{{name}}</a>
								{{/foreach}}
							</div>
							<div class="it-feature-label">{{t "Featured"}}</div>
							<h2><a href="{{url}}">{{title}}</a></h2>
					</div>
			</article>
			{{/foreach}}
				
		</div>
		{{/get}}