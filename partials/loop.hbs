{{!--
Re-usable card for linking to posts
--}}
{{#foreach posts}}
<article class="it-card {{post_class}} {{#if @first}}first it-grid-c3{{/if}}">
    <a class="it-card-link" href="{{url}}" title="{{title}}">
            {{#if feature_image}}
            <figure class="it-card-image-wrapper">
                <img class="it-card-image lazy"
                    data-srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    data-sizes="(max-width: 1000px) 400px, 700px"
                    data-src="{{img_url feature_image size="m"}}"
                    alt="{{title}}"
                />
            </figure>
            {{/if}}
            {{#if featured}}
            	<span class="it-feature-label">
            		{{> "icons/star"}} {{!-- partials/icons/star.hbs --}}
            	</span>
            {{/if}}
            {{> "membership/visibility-label"}} {{!-- partials/membership/visibility-label.hbs --}}
        </a>
        <div class="it-card-content">
            <div class="it-card-meta">
	            <span class="it-post-card-by">
					{{t "by"}}
					{{#has author="count:1"}}
						{{#primary_author}}
							<a href="{{url}}">{{name}}</a>
						{{/primary_author}}
					{{else}}
					{{#has author="count:2"}}
						{{#if authors}}
							{{#foreach authors}}
								<a href="{{url}}">{{name}}</a>
								{{#if @first}}
									{{t "&"}}
								{{/if}}
							{{/foreach}}
						{{/if}}
						{{else}}
						{{#has author="count:>2"}}
								{{#primary_author}}
									<a href="{{url}}">{{name}}</a>
									{{/primary_author}}
									{{t "and others"}}
						{{/has}}
						{{/has}}
						{{/has}}
					<time datetime="{{date format="YYYY-MM-DD"}}">{{date timeago="true"}}</time>
				</span> 
			
				{{#foreach tags limit="1"}}
						<span class="it-post-card-tags">
							<a href="{{url}}" title="{{title}}"><span class="it-tag-hash">&#35;</span>{{name}}</a>
						</span>
				{{/foreach}}
			</div>
            <a class="it-card-link" href="{{url}}">
                <h2 class="it-card-title">{{title}}</h2>
					<p class="it-card-excerpt">
						{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{exerpt}}{{/if}}
					</p>
            </a>
        </div>
</article>
{{/foreach}}