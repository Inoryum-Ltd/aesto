{{!--
Re-usable card for linking to posts
--}}

<article class="it-card {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">
    <a class="it-card-link" href="{{url}}">
        {{#if feature_image}}
            <img class="it-card-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
            />
        {{/if}}
        <div class="it-card-content">
            <span class="it-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
            <h2 class="it-card-title">{{title}}</h2>
            <p>{{excerpt}}</p>
        </div>
    </a>
</article>